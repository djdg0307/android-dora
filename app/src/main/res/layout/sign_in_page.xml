<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:id="@+id/createaccountpage"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DORA"
        android:textSize="50sp"
        android:id="@+id/doratext"
        android:layout_marginTop="30dp"
        android:textColor="#ffff9d37"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Disaster Online Relief Application"
        android:id="@+id/dorafulltext"
        android:singleLine="false"
        android:textColor="#ff8b8b8b"
        android:layout_below="@+id/doratext"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail"
        android:id="@+id/email"
        android:textSize="17sp"
        android:textColor="#ff6a6a6a"
        android:layout_above="@+id/emailtextfield"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/passwordtextfield"
        android:textSize="15sp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/dorafulltext"
        android:layout_alignLeft="@+id/signinbutton"
        android:layout_alignStart="@+id/signinbutton"
        android:layout_marginLeft="36dp" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/password"
        android:textSize="17sp"
        android:textColor="#ff6a6a6a"
        android:layout_above="@+id/signinbutton"
        android:layout_alignLeft="@+id/dorafulltext"
        android:layout_alignStart="@+id/dorafulltext" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailtextfield"
        android:textSize="15sp"
        android:layout_below="@+id/passwordtextfield"
        android:layout_alignLeft="@+id/passwordtextfield"
        android:layout_alignStart="@+id/passwordtextfield" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/signinbutton"
        android:background="#ffffab32"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/emailtextfield"
        android:layout_centerHorizontal="true" />
</RelativeLayout>