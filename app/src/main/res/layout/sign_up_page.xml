<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:id="@+id/createaccountpage"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff535353"
        android:id="@+id/linearLayout"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffad20"
        android:id="@+id/linearLayout3"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DORA"
        android:textSize="50sp"
        android:id="@+id/doratext"
        android:layout_marginTop="30dp"
        android:textColor="#ffff9d37"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Disaster Online Relief Application"
        android:id="@+id/dorafulltext"
        android:singleLine="false"
        android:textColor="#ff8b8b8b"
        android:layout_below="@+id/doratext"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

      <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Create Account"
        android:id="@+id/createaccountbutton"
        android:background="#ffffab32"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/dorafulltext"
        android:layout_alignRight="@+id/fbbutton"
        android:layout_alignEnd="@+id/fbbutton"
        android:onClick="doSomething"/>
       <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Login with Facebook"
        android:id="@+id/fbbutton"
        android:background="#ff000dff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/createaccountbutton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Already a member?"
        android:id="@+id/addreporttext"
        android:textColor="#ff6a6a6a"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:layout_below="@+id/fbbutton"
        android:layout_alignLeft="@+id/dorafulltext"
        android:layout_alignStart="@+id/dorafulltext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign in"
        android:id="@+id/signinlink"
        android:textColor="#ff6a6a6a"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_alignBottom="@+id/addreporttext"
        android:layout_toRightOf="@+id/addreporttext"
        android:layout_toEndOf="@+id/addreporttext" />

</RelativeLayout>