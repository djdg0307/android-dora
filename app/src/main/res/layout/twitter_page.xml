<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:id="@+id/twitteractivity"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profpic"
        android:src="@drawable/profpic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name who tweet the report"
        android:layout_toRightOf="@+id/profpic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:text="What does the fox says?"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/profpic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="Date"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorites"
        android:text="10"
        android:layout_below="@+id/profpic"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/star"
        android:src="@drawable/star"
        android:layout_alignBottom="@+id/favorites"
        android:layout_toLeftOf="@+id/favorites"
        android:layout_toStartOf="@+id/favorites" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retweets"
        android:text="21"
        android:layout_toStartOf="@+id/star"
        android:layout_marginRight="17dp"
        android:layout_alignBottom="@+id/star"
        android:layout_toLeftOf="@+id/star" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/retweetimage"
        android:src="@drawable/retweet"
        android:layout_toStartOf="@+id/retweets"
        android:layout_alignTop="@+id/star"
        android:layout_toLeftOf="@+id/retweets" />
</RelativeLayout>
