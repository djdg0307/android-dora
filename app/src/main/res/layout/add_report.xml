<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff"
    android:id="@+id/addreport" >

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/TitleTextField"
        android:layout_marginTop="38dp"
        android:hint="Title"
        android:textColorHint="#ffb4b4b4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/DescriptionTextField"
        android:layout_marginTop="90dp"
        android:hint="Description"
        android:textColorHint="#ffb4b4b4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:textAlignment="inherit"
        android:textColor="#000000"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Add Photo"
        android:id="@+id/addphotobutton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/DescriptionTextField"
        android:layout_alignStart="@+id/DescriptionTextField"
        android:layout_alignRight="@+id/DescriptionTextField"
        android:layout_alignEnd="@+id/DescriptionTextField"
        android:textSize="20sp"
        android:background="#ffd8d8d8"
        android:clickable="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textColor="#ffffff"
        android:id="@+id/submitreportbutton"
        android:textSize="20sp"
        android:background="#ffd8b753"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addphotobutton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>